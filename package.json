{
    "name": "denoise-plugin",
    "description": "A WebAssembly module implementing the RNNoise noise suppression library for web frontends.",
    "version": "1.1.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dadadah/denoise-plugin.git"
    },
    "scripts": {
        "build": "npm run build:dockerimage && npm run build:emscripten && npm run build:js",
        "lint": "publint",
        "build:dockerimage": "docker image inspect -f '.' emscripten-autotools-4.0.4 || docker build -t emscripten-autotools-4.0.4 .",
        "build:emscripten": "docker run --rm -v $(pwd):/src emscripten-autotools-4.0.4 bash -x ./build.sh",
        "build:js": "tsc"
    },
    "files": [
        "lib",
        "README.md"
    ],
    "devDependencies": {
        "@types/audioworklet": "^0.0.56",
        "@types/compute-lcm": "^1.1.3",
        "@types/emscripten": "^1.39.13",
        "livekit-client": "^2.8.1",
        "publint": "^0.2.8",
        "rollup-plugin-typescript2": "^0.36.0",
        "ts-loader": "^9.5.2",
        "typescript": "^5.5.2"
    },
    "licenses": [
        {
            "type": "Apache-2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0"
        }
    ],
    "dependencies": {
        "compute-lcm": "^1.1.2"
    },
    "publishConfig": {
        "access": "public"
    }
}
